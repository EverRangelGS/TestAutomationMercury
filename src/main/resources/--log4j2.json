{
  "configuration":
  {
    "appenders": {
      "RandomAccessFile": {
        "name": "FILE",
        "fileName": "logs/app-json.log",
        "PatternLayout": {
          "pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
        }
      },
      "Console": {
        "name": "STDOUT",
        "PatternLayout": {
          "pattern": "%highlight{[%-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %msg%n}"
        }
      }
    },
    "loggers": {
      "logger": {
        "name": "grupo.prueba",
        "level": "debug",
        "AppenderRef": [
          {
            "ref": "FILE",
            "level": "info"
          }
        ]
      },
      "root": {
        "level": "debug",
        "AppenderRef": [
          {
            "ref": "STDOUT"
          }
        ]
      }
    }
  }
}